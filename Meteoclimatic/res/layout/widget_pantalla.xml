	        android:textSize="25sp"
	        android:textColor="#000000"
	        android:baselineAlignBottom="true"
	        android:textStyle="normal"
	        android:text="meteoclimatic"
	        android:gravity="center"/>
   	    	
	    	<!-- TextView  
	        android:id="@+id/tw_cab_principal"
